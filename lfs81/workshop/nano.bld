############# Building package
cd $UNPACKDIR

./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --enable-utf8     \
            --docdir=/usr/share/doc/nano-2.8.7 &&
make
make -j1 install &&
install -v -m644 doc/{nano.html,sample.nanorc} /usr/share/doc/nano-2.8.7
ldconfig


cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit