############# Building package
cd $UNPACKDIR

./configure --prefix=/usr         \
            --disable-packagekit  \
            --disable-static &&
make
make -j1 install &&
chmod -v 0755 /usr/libexec/file-roller/isoinfo.sh
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit