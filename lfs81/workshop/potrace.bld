############# Building package
cd $UNPACKDIR

./configure --prefix=/usr                        \
            --disable-static                     \
            --docdir=/usr/share/doc/potrace-1.15 \
            --enable-a4                          \
            --enable-metric                      \
            --with-libpotrace                    &&
make
#make -k check || true
make -j1 install
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit