############# Building package
cd $UNPACKDIR

./configure --prefix=/usr --mandir=/usr/share/man &&
make
make -j1 install &&
install -v -d -m755 /usr/share/doc/links-2.14 &&
install -v -m644 doc/links_cal/* KEYS BRAILLE_HOWTO \
    /usr/share/doc/links-2.14
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit