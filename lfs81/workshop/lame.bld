############# Building package
cd $UNPACKDIR

case $(uname -m) in
   i?86) sed -i -e '/xmmintrin\.h/d' configure ;;
esac
./configure --prefix=/usr --enable-mp3rtp --disable-static &&
make
#make -k test || true
make -j1 pkghtmldir=/usr/share/doc/lame-3.99.5 install
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit