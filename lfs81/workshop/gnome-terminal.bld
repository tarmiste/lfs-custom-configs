############# Building package
cd $UNPACKDIR

./configure --prefix=/usr             \
            --disable-static          \
            --disable-migration       \
            --disable-search-provider \
            --without-nautilus-extension &&
make
make -j1 install
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit