############# Building package
cd $UNPACKDIR

./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --disable-static  &&
make
make -j1 install
pgrep -l notification-da &&
notify-send -i info Information "Hi ${USER}, This is a Test"
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit