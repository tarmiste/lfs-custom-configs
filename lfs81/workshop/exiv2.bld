############# Building package
cd $UNPACKDIR

./configure --prefix=/usr     \
            --enable-video    \
            --enable-webready \
            --without-ssh     \
            --disable-static  &&

make
make -j1 install &&
chmod -v 755 /usr/lib/libexiv2.so
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit