############# Building package
cd $UNPACKDIR

PKG_CONFIG_PATH=/usr/lib/openssl-1.0/pkgconfig \
    ./configure --prefix=/usr                  \
                --shared-cares                 \
                --shared-openssl               \
                --shared-zlib                  \
                --with-intl=system-icu         &&
make
make -j1 install &&
ln -sf node /usr/share/doc/node-8.4.0
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit