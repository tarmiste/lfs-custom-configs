############# Building package
cd $UNPACKDIR

mkdir build &&
cd    build &&

cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=$XORG_PREFIX .. &&
make
#make -k check || true
make -j1 install
ldconfig

echo "export VDPAU_DRIVER=va_gl" >> /etc/profile.d/xorg.sh

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit