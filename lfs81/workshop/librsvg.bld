############# Building package
cd $UNPACKDIR

sed -i 's/ --nogtkinit//' doc/Makefile.in &&

./configure --prefix=/usr    \
            --enable-vala    \
            --disable-static &&
make
#make -k check || true
make -j1 install
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit