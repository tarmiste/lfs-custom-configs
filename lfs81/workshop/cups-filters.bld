############# Building package
cd $UNPACKDIR

./configure                  \
        --prefix=/usr        \
        --sysconfdir=/etc    \
        --localstatedir=/var \
        --without-rcdir      \
        --disable-static     \
        --disable-avahi      \
        --docdir=/usr/share/doc/cups-filters-1.17.2 &&
make
#make -k check || true
make -j1 install
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit