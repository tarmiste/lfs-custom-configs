############# Building package
cd $UNPACKDIR

autoreconf -fi                &&
./configure --sysconfdir=/etc &&
make
make -j1 install                  &&
mv /usr/lib/libnsl.so.2* /lib &&
ln -sfv ../../lib/libnsl.so.2.0.0 /usr/lib/libnsl.so
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit