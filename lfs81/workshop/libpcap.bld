############# Building package
cd $UNPACKDIR

patch -Np1 -i ../libpcap-1.8.1-enable_bluetooth-1.patch &&

./configure --prefix=/usr &&
make
sed -i '/INSTALL_DATA.*libpcap.a\|RANLIB.*libpcap.a/ s/^/#/' Makefile
make -j1 install
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit