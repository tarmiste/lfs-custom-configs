############# Building package
cd $UNPACKDIR

./configure --prefix=/usr --mandir=/usr/share/man &&
make
#make -k  || true
make -j1 install &&
install -v -m755 -d                 /usr/share/doc/paps-0.6.8 &&
install -v -m644 doxygen-doc/html/* /usr/share/doc/paps-0.6.8
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit