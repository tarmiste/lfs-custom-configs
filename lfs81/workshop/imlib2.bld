############# Building package
cd $UNPACKDIR

./configure --prefix=/usr --disable-static &&
make
make -j1 install &&
install -v -m755 -d /usr/share/doc/imlib2-1.4.10 &&
install -v -m644    doc/{*.gif,index.html} \
                    /usr/share/doc/imlib2-1.4.10
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit