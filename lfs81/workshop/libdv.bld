############# Building package
cd $UNPACKDIR

./configure --prefix=/usr \
            --disable-xv \
            --disable-static &&
make
make -j1 install &&
install -v -m755 -d      /usr/share/doc/libdv-1.0.0 &&
install -v -m644 README* /usr/share/doc/libdv-1.0.0
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit