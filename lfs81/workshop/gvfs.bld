############# Building package
cd $UNPACKDIR

./configure --prefix=/usr \
            --sysconfdir=/etc \
            --disable-gphoto2 &&
make
#make -k check || true
make -j1 install
glib-compile-schemas /usr/share/glib-2.0/schemas
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit