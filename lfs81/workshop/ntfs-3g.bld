############# Building package
cd $UNPACKDIR

./configure --prefix=/usr        \
            --disable-static     \
            --with-fuse=internal &&
make
make -j1 install &&
ln -sv ../bin/ntfs-3g /sbin/mount.ntfs &&
ln -sv ntfs-3g.8 /usr/share/man/man8/mount.ntfs.8
chmod -v 4755 /bin/ntfs-3g
ldconfig



chmod -v 777 /mnt/usb

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit