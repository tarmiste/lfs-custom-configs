############# Building package
cd $UNPACKDIR

./configure --prefix=/usr \
            --sysconfdir=/etc \
            --enable-charset &&
make
#make -k check || true
make -j1 install &&
cp -v doc/keybind-migration.txt /usr/share/mc
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit