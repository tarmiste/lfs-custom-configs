############# Building package
cd $UNPACKDIR

./configure --prefix=/usr --disable-static &&
make
make -j1 install
install -v -m755 -d /usr/share/doc/libevent-2.1.8/api &&
cp      -v -R       doxygen/html/* \
                    /usr/share/doc/libevent-2.1.8/api
ldconfig

cd $BUILD_DIR
[[ -n "$KEEP_FILES" ]] || rm -rf $UNPACKDIR unpacked

exit